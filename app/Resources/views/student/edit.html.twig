{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col">
            <div class="media my-3">
                <img class="mr-3" src="http://via.placeholder.com/150x150" alt="Student picture">
                <div class="media-body">
                    <h1 class="h3">{{ student.firstname }} {{ student.name|upper }}</h1>
                    <p class="col-4">
                        DateBirth: {{ student.dateOfBirth|date("d/m/Y") }} <br/>
                        Gender:
                        {% if student.gender == constant('AppBundle\\Entity\\Student::FEMALE') %}
                            Femme
                        {% elseif student.gender == constant('AppBundle\\Entity\\Student::MALE') %}
                            Homme
                        {% else %}
                            Undefined
                        {% endif %}
                        <br/>
                        PromoName: {{ student.promo.name }}
                    </p>
                </div>
            </div>
        </div>
        <div class="col float-right">
            <div class="row">
                <p>
                    Version ECF:
                    {% if student.promo.ecfVersion == constant('AppBundle\\Entity\\Promo::NEW_ECF') %}
                        <span class="alert alert-success">Developpeur Web et Mobile (nouvelle version)</span>
                    {% elseif student.promo.ecfVersion == constant('AppBundle\\Entity\\Promo::OLD_ECF') %}
                        <span class="alert alert-success">Developpeur Logiciel (ancienne version)</span>
                    {% endif %}
                </p>
            </div>
            <div class="row">
                <a class="btn btn-success" target="_blank" href="{{ path('downloadTemplate', {'promo': student.promo.id }) }}">Telecharger le template du livret ECF</a>
            </div>
        </div>
    </div>

    {{ form_start(edit_form) }}
    <div class="row">
        <div class="col">
            <div class="card mb-3">
                {% if student.promo.ecfVersion == constant('AppBundle\\Entity\\Promo::NEW_ECF') %}
                    <div class="card-header h4 text-white bg-dark">
                        <p>Développer la partie back-end d’une application web ou webmobile en intégrant les recommandations de sécurité<button data-type="showMoreActivityOne" type="button" class="showMore float-right btn btn-info">En savoir plus</button></p>
                    </div>
                    <div id="showMoreActivityOne">
                        <ol>
                            <strong>Compétences:</strong>
                            <li>Maquetter une application</li>
                            <li>Réaliser une interface utilisateur web statique et adaptable</li>
                            <li>Développer une interface utilisateur web dynamique</li>
                            <li>Réaliser une interface utilisateur avec une solution de gestion de contenu ou e-commerce</li>
                        </ol>
                        <hr/>
                    </div>
                {% elseif student.promo.ecfVersion == constant('AppBundle\\Entity\\Promo::OLD_ECF') %}
                    <div class="card-header h4 text-white bg-dark">
                        <p>Développer une application client - serveur <button data-type="showMoreActivityOne" type="button" class="showMore float-right btn btn-info">En savoir plus</button></p>
                    </div>
                    <div id="showMoreActivityOne">
                        <ol>
                            <strong>Compétences:</strong>
                            <li>Maquetter une application</li>
                            <li>Concevoir une base de données</li>
                            <li>Mettre en place une base de données</li>
                            <li>Développer une interface utilisateur</li>
                            <li>Développer des composants d'accès aux données</li>
                        </ol>
                        <hr/>
                    </div>
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <p class="card-text">
                        {{ form_row(edit_form.commActivityOne) }}
                        {{ form_row(edit_form.validateActivityOne) }}
                    </p>
                    <hr/>
                    <p class="card-text">
                        {{ form_row(edit_form.commEvalSuppOne) }}
                        {{ form_row(edit_form.validateEvalSuppOne) }}
                    </p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card mb-3">
                {% if student.promo.ecfVersion == constant('AppBundle\\Entity\\Promo::NEW_ECF') %}
                    <div class="card-header h4 text-white bg-dark">
                        <p>Développer la partie front-end d’une application web ou web mobile en intégrant les recommandations de sécurité<button data-type="showMoreActivityTwo" type="button" class="showMore float-right btn btn-info">En savoir plus</button></p>
                    </div>
                    <div id="showMoreActivityTwo">
                        <ol>
                            <strong>Competences</strong>
                            <li>Créer une base de données</li>
                            <li>Développer les composants d’accès aux données</li>
                            <li>Développer la partie back-end d’une application Web ou Web Mobile</li>
                            <li>Elaborer et mettre en œuvre des composants dans une application de gestion de contenu ou e-commerce</li>
                        </ol>
                        <hr/>
                    </div>
                {% elseif student.promo.ecfVersion == constant('AppBundle\\Entity\\Promo::OLD_ECF') %}
                    <div class="card-header h4 text-white bg-dark">
                        <p>Développer une application web <button data-type="showMoreActivityTwo" type="button" class="showMore float-right btn btn-info">En savoir plus</button></p>
                    </div>
                    <div id="showMoreActivityTwo">
                        <ol>
                            <strong>Competences</strong>
                            <li>Développer des pages web en lien avec une base de données</li>
                            <li>Mettre en œuvre une solution de gestion de contenu ou e-commerce</li>
                            <li>Développer une application simple de mobilité numérique</li>
                            <li>Utiliser l’anglais dans son activité professionnelle en informatique</li>
                        </ol>
                        <hr/>
                    </div>
                {% endif %}
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <p class="card-text">
                        {{ form_row(edit_form.commActivityTwo) }}
                        {{ form_row(edit_form.validateActivityTwo) }}
                    </p>
                    <hr/>
                    <p class="card-text">
                        {{ form_row(edit_form.commEvalSuppTwo) }}
                        {{ form_row(edit_form.validateEvalSuppTwo) }}
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <div class="card mb-3">
                <div class="card-header h4 text-white bg-dark">Observation generale</div>
                <div class="card-body">
                    <h5 class="card-title"></h5>
                    <p class="card-text">
                        {{ form_row(edit_form.observationStudent) }}
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-6">
            <input class="btn btn-success btn-block btn-lg" type="submit" value="Edit"/>
        </div>
    </div>
    {{ form_end(edit_form) }}

    <hr/>
    <a class="btn btn-outline btn-outline-dark" href="{{ path('student_index', { 'promo': student.promo.id }) }}">Back to the
        list</a>

{% endblock %}

{% block javascripts %}
    <script>
        $('.showMore').click(function(e){
            e.preventDefault();
            let type = $(this).data('type');
            $('#' + type).slideToggle();
        });
    </script>
{% endblock %}